<idea-plugin>
    <id>com.github.yelog.ideavimbettercmd</id>
    <name>ideavim-better-cmd</name>
    <vendor>yelog</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>IdeaVIM</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.yelog.ideavimbettercmd.startup.CmdlineOverlayStartupActivity" />
    </extensions>
</idea-plugin>
